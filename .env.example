# VoiceHive Hotels Environment Configuration
# Copy this file to .env and update with your values

# Environment
ENVIRONMENT=development
AWS_REGION=eu-west-1

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/voicehive

# Redis
REDIS_URL=redis://localhost:6379

# Vault
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=your-vault-token

# LiveKit
LIVEKIT_URL=ws://localhost:7880
LIVEKIT_API_KEY=your-api-key
LIVEKIT_API_SECRET=your-api-secret

# Twilio (for SIP/PSTN)
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=your-phone-number

# AI Services
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_KEY=your-azure-openai-key
AZURE_OPENAI_DEPLOYMENT=gpt-4

# ElevenLabs TTS
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# NVIDIA Riva
RIVA_SERVER=localhost:50051

# PMS Credentials (store in Vault in production)
APALEO_CLIENT_ID=your-client-id
APALEO_CLIENT_SECRET=your-client-secret
APALEO_PROPERTY_ID=your-property-id

MEWS_CLIENT_TOKEN=your-mews-token
MEWS_ACCESS_TOKEN=your-mews-access-token

OPERA_CLIENT_ID=your-opera-client-id
OPERA_CLIENT_SECRET=your-opera-client-secret

# Monitoring
PROMETHEUS_ENDPOINT=http://localhost:9090
GRAFANA_ENDPOINT=http://localhost:3000

# Feature Flags
ENABLE_VOICE_CLONING=true
ENABLE_WEBHOOKS=true
ENABLE_EU_ONLY_MODE=true

# Security
JWT_SECRET_KEY=your-secret-key-change-in-production
API_KEY_PREFIX=vh_

# GDPR Settings
RECORDING_RETENTION_DAYS=30
TRANSCRIPT_RETENTION_DAYS=90
PII_REDACTION_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100

# Development Tools
DEBUG=false
RELOAD=true